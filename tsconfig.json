{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/api/*": ["api/*"],
      "@/common/*": ["common/*"],
      "@/config/*": ["config/*"],
      "@/utils/*": ["utils/*"],
      "@/models/*": ["models/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"],
  "exclude": ["src/tests/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
